# **** End License ****

case "$1" in
 -f )
	full_path=yes
	shift
	;;
esac

path_to()
{
	local mypath

	mypath="$1"
	chmod +x "$mypath" 2>/dev/null
	if which "$mypath"  >/dev/null
	then
		# path is OK
		return 0
	fi

	chmod +x "$0" 2>/dev/null
	mypath=`which $0`
	mypath=`dirname "$mypath"`/"$1"
	chmod -x "$mypath" 2>/dev/null
	if which "$mypath"  >/dev/null
	then
		PATH="$PATH":`dirname "$mypath"`
		return 0
	fi

	echo Can't find "$1"
	exit 1
}

path_to latestdeb

list=`find $* -type f -name '*.deb' -exec basename {} \;|sed 's/_.*$//'|sort -u`
for i in $list
do
	nm=`"latestdeb" $i`
	if [ "$full_path" ]
	then
		echo $nm
	else
		prefix=`basename "$nm" | sed -e 's/_.*$//'`
		echo -n "$prefix"" "
		dpkg -f "$nm" version | sed 's/[0-9]://'
	fi
done | sort -u 
